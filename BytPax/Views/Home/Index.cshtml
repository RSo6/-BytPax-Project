@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/js/all.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Обробка сердечок (лайків)
            const hearts = document.querySelectorAll(".heart-btn");
            hearts.forEach(btn => {
                const id = btn.dataset.id;
                if (localStorage.getItem(`heart-${id}`) === "true") {
                    btn.classList.add("active");
                }

                btn.addEventListener("click", e => {
                    e.stopPropagation(); // Запобігаємо відкриттю модалки
                    btn.classList.toggle("active");
                    localStorage.setItem(`heart-${id}`, btn.classList.contains("active"));
                });
            });

            // Модальне вікно зі списком статей
            const articlesModal = document.getElementById('articlesModal');
            if (articlesModal) {
                articlesModal.addEventListener('show.bs.modal', function (event) {
                    const card = event.relatedTarget;
                    const categoryName = card.getAttribute('data-title');
                    const articlesDataRaw = card.getAttribute('data-articles');

                    let articlesData = [];
                    try {
                        articlesData = JSON.parse(articlesDataRaw);
                    } catch (e) {
                        console.error("Invalid JSON in data-articles:", e);
                    }

                    const modalTitle = articlesModal.querySelector('.modal-title');
                    const articlesList = articlesModal.querySelector('#articlesList');

                    modalTitle.textContent = `Статті категорії: ${categoryName}`;
                    articlesList.innerHTML = '';

                    if (!articlesData || articlesData.length === 0) {
                        articlesList.innerHTML = '<li class="list-group-item bg-dark text-light fst-italic">Статей немає</li>';
                    } else {
                        articlesData.forEach(article => {
                            const li = document.createElement('li');
                            li.className = 'list-group-item bg-dark text-light';

                            li.innerHTML = `<h6>${article.Topic}</h6>
                                            <p>${article.BodyText.length > 200 ? article.BodyText.substring(0, 200) + '...' : article.BodyText}</p>`;

                            articlesList.appendChild(li);
                        });
                    }
                });
            }
        });
        document.addEventListener("DOMContentLoaded", function () {
            // Лайки (сердечка)
            const hearts = document.querySelectorAll(".heart-btn");
            hearts.forEach(btn => {
                const id = btn.dataset.id;
                if (localStorage.getItem(`heart-${id}`) === "true") {
                    btn.classList.add("active");
                }
                btn.addEventListener("click", e => {
                    e.stopPropagation();
                    btn.classList.toggle("active");
                    localStorage.setItem(`heart-${id}`, btn.classList.contains("active"));
                });
            });

            // Модальне вікно для карток подій
            const cardModal = new bootstrap.Modal(document.getElementById('cardModal'));
            const modalTitle = document.getElementById('cardModalLabel');
            const modalImage = document.getElementById('modalImage');
            const modalDescription = document.getElementById('modalDescription');

            const cards = document.querySelectorAll("#cardsEvents .card");
            cards.forEach(card => {
                card.addEventListener("click", () => {
                    const title = card.getAttribute('data-title') || "Без назви";
                    const img = card.getAttribute('data-img') || "";
                    const description = card.getAttribute('data-description') || "Опис відсутній";

                    modalTitle.textContent = title;
                    modalImage.src = img;
                    modalDescription.textContent = description;

                    cardModal.show();
                });
            });
        });
        document.addEventListener('DOMContentLoaded', function() {
            const modal = new bootstrap.Modal(document.getElementById('cardModal'));
            const modalTitle = document.getElementById('cardModalLabel');
            const modalImage = document.getElementById('modalImage');
            const modalDescription = document.getElementById('modalDescription');

            function addCardClickListeners(scrollerId) {
                const scroller = document.querySelector(`#${scrollerId}`);
                if (!scroller) return;

                const cards = scroller.querySelectorAll('.card');
                cards.forEach(card => {
                    card.addEventListener('click', function(e) {
                        // Уникнути відкриття при кліку на кнопку "heart"
                        if (e.target.closest('.heart-btn')) return;

                        const title = card.getAttribute('data-title') || 'Без назви';
                        const img = card.getAttribute('data-img') || '';
                        const description = card.getAttribute('data-description') || '';

                        modalTitle.textContent = title;
                        modalImage.src = img;
                        modalImage.alt = title;
                        modalDescription.textContent = description;

                        modal.show();
                    });
                });
            }

            // Додаємо обробники для всіх трьох секцій
            addCardClickListeners('cardScroller');              // Категорії
            addCardClickListeners('cardsAthletes');              // Спортсмени
            addCardClickListeners('cardScrollerEvents');        // Події (якщо додана)

        });

        document.addEventListener('DOMContentLoaded', function() {
            const modal = new bootstrap.Modal(document.getElementById('cardModal'));
            const modalTitle = document.getElementById('cardModalLabel');
            const modalImage = document.getElementById('modalImage');
            const modalDescription = document.getElementById('modalDescription');

           const scrollerAthletes = document.querySelector('#cardsAthletes');
            if (scrollerAthletes) {
                const cards = scrollerAthletes.querySelectorAll('.card');
                cards.forEach(card => {
                    card.addEventListener('click', function(e) {
                        if (e.target.closest('.heart-btn')) return;

                        const title = card.getAttribute('data-title') || 'Без назви';
                        const img = card.getAttribute('data-img') || '';
                        const description = card.getAttribute('data-description') || '';

                        modalTitle.textContent = title;
                        modalImage.src = img;
                        modalImage.alt = title;
                        modalDescription.textContent = description;

                        modal.show();
                    });
                });
            }
        });

    </script>

    <style>
        .heart-btn.active i {
            color: red;
        }
        .heart-btn {
            cursor: pointer;
        }
    </style>
