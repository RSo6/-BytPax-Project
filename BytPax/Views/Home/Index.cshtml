}

@section Styles {
    <style>
        .btn-warm {
            background: linear-gradient(135deg, #ffeb3b, #ff9800);
            color: #000;
            border: none;
            font-weight: 600;
            padding: 0.6rem 1.2rem;
            border-radius: 8px;
            box-shadow: 0 0 12px rgba(255, 193, 7, 0.6);
            transition: all 0.3s ease;
        }

            .btn-warm:hover {
                background: linear-gradient(135deg, #ffc107, #ff5722);
                box-shadow: 0 0 20px rgba(255, 152, 0, 0.9);
                color: #111;
                text-decoration: none;
            }

        .btn-warm-outline {
            background: transparent;
            border: 2px solid #ff9800;
            color: #ff9800;
            font-weight: 600;
            padding: 0.6rem 1.2rem;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .btn-warm-outline:hover {
                background: #ff9800;
                color: #fff;
                box-shadow: 0 0 12px rgba(255, 152, 0, 0.6);
            }

        /* Чорний фон і стиль для секції пошуку */
        #search-form {
            background-color: #000;
            color: #fff;
            padding: 4rem 0;
        }

            #search-form h5 {
                color: #ffc107;
                font-weight: bold;
            }

            #search-form input.form-control {
                background-color: #1e1e1e;
                border: 1px solid #555;
                color: #fff;
                border-radius: 8px;
            }

                #search-form input.form-control:focus {
                    border-color: #ff9800;
                    background-color: #111;
                    box-shadow: 0 0 8px #ff9800;
                }

        .invalid-feedback {
            color: #f88;
        }

        /* Темна стилізація для секції результатів */
        #results {
            background-color: #121212;
            color: #eee;
            padding: 3rem 0;
            border-radius: 12px;
            box-shadow: 0 0 15px rgba(255, 152, 0, 0.3);
        }

            #results h3 {
                color: #ffb300;
                font-weight: 700;
                margin-bottom: 2rem;
            }

            #results > div {
                background-color: #1e1e1e;
                border-radius: 10px;
                padding: 1.5rem;
                margin-bottom: 1.5rem;
                box-shadow: 0 0 10px rgba(255, 152, 0, 0.25);
            }
        .heart-btn {
            background-color: white;
            border: none;
            border-radius: 50%;
            padding: 8px 10px;
            font-size: 1.1rem;
            color: gray;
            transition: color 0.3s ease;
        }

        .heart-btn.active,
        .heart-btn:hover {
            color: red;
        }
        .scroll-arrow {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 10;
        background-color: rgba(0, 0, 0, 0.7);
        color: #ffc107;
        border: none;
        padding: 0.75rem 1rem;
        border-radius: 50%;
        cursor: pointer;
        transition: background 0.3s ease;
        }

        .scroll-arrow:hover {
            background-color: rgba(255, 152, 0, 0.8);
        }

        .card {
            cursor: pointer;
        }

        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    </style>
}

<header class="masthead text-white" style="background: url('/images/sport-1.png') no-repeat center center; background-size: cover; background-attachment: fixed; min-height: 100vh; display: flex; align-items: center;">
    <div class="overlay" style="background-color: rgba(0, 0, 0, 0.5); position: absolute; top: 0; left: 0; height: 100%; width: 100%; z-index: 0;"></div>

    <div class="container text-center" style="position: relative; z-index: 1;">
