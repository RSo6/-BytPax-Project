@using BytPax.Models.core
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .register-container {
        max-width: 450px;
        margin: 5rem auto;
        padding: 2.5rem 3rem;
        background: #1e1e1e;
        border-radius: 12px;
        box-shadow: 0 0 20px rgba(10, 170, 255, 0.6);
        color: #eee;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        .register-container h2 {
            color: #0af;
            text-align: center;
            font-weight: 700;
            margin-bottom: 2rem;
            letter-spacing: 1.2px;
        }

    label {
        color: #59a6ff;
        font-weight: 600;
    }

    input.form-control, select.form-select {
        background-color: #2a2a2a;
        border: 1px solid #444;
        color: #eee;
        transition: border-color 0.3s ease;
        border-radius: 6px;
    }

        input.form-control:focus, select.form-select:focus {
            border-color: #0af;
            box-shadow: 0 0 8px #0af;
            background-color: #222;
            color: #fff;
        }

    .text-danger {
        font-size: 0.9rem;
        margin-top: 0.25rem;
    }

    button.btn-primary {
        background: linear-gradient(135deg, #0af, #06c);
        border: none;
        width: 100%;
        font-weight: 700;
        padding: 0.6rem 0;
        border-radius: 8px;
        margin-top: 1.5rem;
        cursor: pointer;
        transition: background 0.3s ease, box-shadow 0.3s ease;
        color: white;
        letter-spacing: 0.8px;
    }

        button.btn-primary:hover {
            background: linear-gradient(135deg, #06c, #0af);
            box-shadow: 0 0 15px #0af;
        }

    a.btn-link {
        display: block;
        text-align: center;
        margin-top: 1rem;
        color: #59a6ff;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        a.btn-link:hover {
            color: #0af;
            text-decoration: underline;
        }
</style>

<div class="register-container" role="main" aria-labelledby="registerTitle">
    <h2 id="registerTitle">Реєстрація</h2>
    <form asp-action="Register" method="post" novalidate>
        <div class="mb-3">
            <label asp-for="FullName"></label>
            <input asp-for="FullName" class="form-control" autocomplete="name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" autocomplete="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ImagePath"></label>
            <input asp-for="ImagePath" class="form-control" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Role"></label>
            <select asp-for="Role" class="form-select" asp-items="Html.GetEnumSelectList<User.UserRole>()">
                <option disabled selected>-- Виберіть роль --</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Зареєструватись</button>
        <a href="@Url.Action("Login", "Auth")" class="btn-link">Вже є акаунт? Увійти</a>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
