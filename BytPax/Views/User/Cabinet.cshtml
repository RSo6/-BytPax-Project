@model BytPax.Models.UserProfileViewModel

@{
    ViewData["Title"] = "Кабінет користувача";
}

@section Styles {
    <style>
        /* Фоновий блок з блюром */
        .user-cabinet-section {
            position: relative;
            background: url('/images/sport-4.webp') no-repeat center center;
            background-size: cover;
            background-attachment: fixed;
            overflow: hidden;
            min-height: 100vh;
            padding-top: 3rem;
            padding-bottom: 3rem;
        }

            /* Блюр ефект поверх картинки */
            .user-cabinet-section::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                backdrop-filter: blur(10px);
                -webkit-backdrop-filter: blur(10px);
                z-index: 0;
            }

        /* Контейнер з контентом поверх блюра */
        .user-cabinet-container {
            position: relative;
            z-index: 1;
            max-width: 960px;
            margin: 0 auto;
            color: transparent;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Біло-сірий градієнт для тексту */
        .gradient-text {
            background: linear-gradient(135deg, #ffffff, #bbbbbb);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-fill-color: transparent;
        }

        /* Карточки із жовто-синіми акцентами */
        .card {
            background: rgba(0, 71, 171, 0.15); /* прозорий синій */
            border: 2px solid #ffd600; /* яскравий жовтий */
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(255, 214, 0, 0.5);
            color: transparent;
        }

        .card-title {
            background: linear-gradient(135deg, #ffffff, #bbbbbb);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-fill-color: transparent;
            font-weight: 700;
            text-align: center;
        }

        label {
            background: linear-gradient(135deg, #ffffff, #bbbbbb);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-fill-color: transparent;
            font-weight: 600;
        }

        .form-control {
            background-color: rgba(255, 214, 0, 0.15); /* прозорий жовтий */
            border: 1px solid #ffd600;
            color: #fff;
            border-radius: 0.5rem;
            transition: all 0.3s ease;
        }

            .form-control::placeholder {
                color: #f5f5f5;
                opacity: 0.7;
            }

            .form-control:focus {
                border-color: #0057b8; /* насичений синій */
                box-shadow: 0 0 8px #0057b8;
                background-color: rgba(0, 87, 184, 0.3);
                color: #fff;
            }

        .btn-primary {
            background: linear-gradient(135deg, #ffd600, #0057b8);
            border: none;
            border-radius: 0.5rem;
            font-weight: 700;
            color: #fff;
            box-shadow: 0 0 12px #ffd600;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #0057b8, #ffd600);
                box-shadow: 0 0 20px #0057b8;
                color: #fff;
            }

        .saved-articles {
            display: flex;
            flex-wrap: wrap;
            gap: 0.6rem;
        }

            .saved-articles button {
                background: transparent;
                border: 1.8px solid #ffd600;
                color: #ffd600;
                border-radius: 0.5rem;
                padding: 0.5rem 1rem;
                font-weight: 600;
                transition: all 0.3s ease;
            }

                .saved-articles button:hover {
                    background: #ffd600;
                    color: #003d82;
                    box-shadow: 0 0 12px #ffd600;
                }

        .img-thumbnail {
            border-radius: 50%;
            border: 3px solid #ffd600;
            max-width: 150px;
            height: auto;
            box-shadow: 0 0 15px #ffd600;
        }

        /* Центрування контенту в картці аватара */
        .avatar-card-body {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
    </style>
}

<section class="page-section user-cabinet-section">
    <div class="container user-cabinet-container">
        <h2 class="text-center mb-5 gradient-text">👤 Кабінет користувача</h2>

        <div class="row">
            <div class="col-md-4 mb-4 mb-md-0">
                <div class="card h-100">
                    <div class="card-body avatar-card-body">
                        <h5 class="card-title">Аватар</h5>
                        <img src="~/images/default-avatar.png" alt="User Avatar" class="img-thumbnail mb-3" />
                        <p class="gradient-text mb-0">Ваш профільний аватар</p>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Інформація користувача</h5>

                        <form method="post" action="/User/UpdateUsername" novalidate>
                            <div class="mb-3">
                                <label for="newUsername">Ім’я користувача</label>
                                <input type="text" class="form-control" id="newUsername" name="newUsername" value="@Model.Username" />
                            </div>
                            <button type="submit" class="btn btn-primary">Оновити ім’я</button>
                        </form>

                        @if (Model.SavedArticles?.Any() == true)
                        {
                            <hr class="border-secondary mt-4" />
                            <h5 class="card-title mt-4 gradient-text">Збережені статті</h5>
                            <div class="saved-articles" aria-label="Saved articles list">
                                @foreach (var article in Model.SavedArticles)
                                {
                                    <button type="button" title="@article.Topic">@article.Topic</button>
                                }
                            </div>
                        }       
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const favorites = JSON.parse(localStorage.getItem("favoriteAthletes")) || [];
        const container = document.querySelector(".saved-articles[data-type='favorites']");
        if (container && favorites.length > 0) {
            favorites.forEach(name => {
                const btn = document.createElement("button");
                btn.innerText = name;
                btn.title = name;
                container.appendChild(btn);
            });
        }
    });
</script>

