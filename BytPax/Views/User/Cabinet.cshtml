@model BytPax.Models.UserProfileViewModel

@{
    ViewData["Title"] = "Кабінет користувача";
}

@section Styles {
    <style>
        /* Твій CSS без змін */
        .user-cabinet-section {
            position: relative;
            background: url('/demo-image-02.jpg') no-repeat center center;
            background-size: cover;
            background-attachment: scroll;
        }

            .user-cabinet-section::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.6);
                z-index: 0;
            }

        .user-cabinet-container {
            position: relative;
            z-index: 1;
            max-width: 960px;
            margin: 0 auto;
        }

        .card {
            background: #1c1c1c;
            border: none;
            border-radius: 1rem;
            box-shadow: 0 0 20px rgba(10, 170, 255, 0.1);
        }

        .card-title {
            color: #0af;
            font-weight: 600;
        }

        label {
            color: #9bdcff;
        }

        .form-control {
            background-color: #2a2a2a;
            border: 1px solid #444;
            color: #eee;
            border-radius: 0.5rem;
        }

            .form-control:focus {
                border-color: #0af;
                box-shadow: 0 0 10px #0af;
                background-color: #1e1e1e;
                color: white;
            }

        .btn-primary {
            background: linear-gradient(135deg, #0af, #06c);
            border: none;
            border-radius: 0.5rem;
            font-weight: 600;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #06c, #0af);
                box-shadow: 0 0 10px #0af;
            }

        .saved-articles {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

            .saved-articles button {
                background: none;
                border: 1px solid #f55;
                color: #f55;
                border-radius: 0.5rem;
                padding: 0.4rem 0.8rem;
                font-weight: 500;
                transition: all 0.3s ease;
            }

                .saved-articles button:hover {
                    background: #f55;
                    color: white;
                    box-shadow: 0 0 10px #f55;
                }

        .img-thumbnail {
            border-radius: 50%;
            border: 3px solid #0af;
            max-width: 150px;
            height: auto;
        }
    </style>
}

<section class="page-section bg-dark text-white py-5 user-cabinet-section">
    <div class="container user-cabinet-container">
        <h2 class="text-center text-info mb-5">👤 Кабінет користувача</h2>

        <div class="row">
            <div class="col-md-4 text-center mb-4 mb-md-0">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Аватар</h5>
                        <img src="@(string.IsNullOrEmpty(Model.AvatarUrl) ? Url.Content("~/images/default-avatar.png") : Model.AvatarUrl)"
                             alt="User Avatar" class="img-thumbnail mb-3" />
                        <p class="mb-0">Ваш профільний аватар</p>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Інформація користувача</h5>

                        <form method="post" action="/User/UpdateUsername" novalidate>
                            <div class="mb-3">
                                <label for="newUsername">Ім’я користувача</label>
                                <input type="text" class="form-control" id="newUsername" name="newUsername" value="@Model.Username" />
                            </div>
                            <button type="submit" class="btn btn-primary">Оновити ім’я</button>
                        </form>

                        @if (Model.SavedArticles?.Any() == true)
                        {
                            <hr class="border-secondary mt-4" />
                            <h5 class="card-title mt-4">Збережені статті</h5>
                            <div class="saved-articles" aria-label="Saved articles list">
                                @foreach (var article in Model.SavedArticles)
                                {
                                    <button type="button" title="@article.Topic">@article.Topic</button>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
