@model BytPax.Models.UserProfileViewModel

@{
    ViewData["Title"] = "Кабінет користувача";
}

<style>
    .user-cabinet-container {
        max-width: 900px;
        margin: 3rem auto 5rem;
        color: #eee;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .welcome-header {
        color: #0af;
        font-weight: 700;
        margin-bottom: 2rem;
        text-align: center;
        letter-spacing: 1.2px;
    }

    .card {
        background: #1e1e1e;
        border-radius: 12px;
        box-shadow: 0 0 15px rgba(10, 170, 255, 0.5);
        border: none;
        margin-bottom: 2rem;
    }

    .card-title {
        color: #59a6ff;
        font-weight: 700;
        font-size: 1.4rem;
        margin-bottom: 1rem;
    }

    img.img-thumbnail {
        border-radius: 50%;
        border: 3px solid #0af;
        max-width: 150px;
        height: auto;
    }

    label {
        color: #59a6ff;
        font-weight: 600;
    }

    input.form-control {
        background-color: #2a2a2a;
        border: 1px solid #444;
        color: #eee;
        border-radius: 8px;
        transition: border-color 0.3s ease;
    }

        input.form-control:focus {
            border-color: #0af;
            box-shadow: 0 0 8px #0af;
            background-color: #222;
            color: #fff;
        }

    button.btn-primary {
        background: linear-gradient(135deg, #0af, #06c);
        border: none;
        padding: 0.6rem 1.2rem;
        border-radius: 8px;
        font-weight: 700;
        cursor: pointer;
        transition: background 0.3s ease, box-shadow 0.3s ease;
        color: white;
        margin-top: 1rem;
        width: 100%;
    }

        button.btn-primary:hover {
            background: linear-gradient(135deg, #06c, #0af);
            box-shadow: 0 0 15px #0af;
        }

    .saved-articles {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
        margin-top: 0.5rem;
    }

        .saved-articles button {
            background: none;
            border: 2px solid #f55;
            color: #f55;
            border-radius: 10px;
            padding: 0.5rem 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .saved-articles button:hover {
                background: #f55;
                color: white;
                box-shadow: 0 0 10px #f55;
            }
</style>

<div class="user-cabinet-container">
    

    <div class="row">
        <div class="col-12 col-md-4 text-center">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Аватар</h5>
                    <img src="@Model.AvatarUrl" alt="User Avatar" class="img-thumbnail" />
                    <p class="mt-3">Ваш профільний аватар</p>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Інформація користувача</h5>
                    <form method="post" action="/User/UpdateUsername" novalidate>
                        <div class="mb-3">
                            <label for="newUsername">Змінити ім'я користувача</label>
                            <input type="text" class="form-control" id="newUsername" name="newUsername" value="@Model.Username" />
                        </div>
                        <button type="submit" class="btn btn-primary">Оновити ім'я</button>
                    </form>

                    <hr style="border-color:#444;" />

                    <h5 class="card-title mt-4">Збережені статті</h5>
                    <div class="saved-articles" aria-label="Saved articles list">
                        @foreach (var article in Model.SavedArticles)
                        {
                            <button type="button" title="@article.Topic">@article.Topic</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
