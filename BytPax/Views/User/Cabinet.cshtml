@model BytPax.Models.UserProfileViewModel
@{
    ViewData["Title"] = "User Cabinet";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
<header>
    <h2>Welcome, @Model.Username</h2>

    <div>
        <img src="@Model.AvatarUrl" alt="Avatar" width="100" height="100" />
        <p>Your avatar</p>
    </div>

    <nav class="navbar navbar-expand-sm navbar-light bg-white">
        <a class="navbar-brand" href="/">BytPax</a>
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <a class="nav-link" href="/Auth/Logout">Log Out</a>
            </li>
        </ul>
    </nav>
</header>

<div class="container mt-4">
    <div class="row">
        <div class="col-12 col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Avatar</h5>
                    <img src="@Model.AvatarUrl" alt="User Avatar" class="img-thumbnail" width="150">
                </div>
            </div>
        </div>
        <div class="col-12 col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">User Information</h5>

                    <form method="post" action="/User/UpdateUsername">
                        <div class="form-group">
                            <label for="newUsername">Change Username</label>
                            <input type="text" class="form-control" id="newUsername" name="newUsername" value="@Model.Username">
                        </div>
                        <button type="submit" class="btn btn-primary mt-3">Update Username</button>
                    </form>

                    <hr>

                    <h5 class="card-title mt-4">Saved Articles</h5>
                    <div class="d-flex">
                        @foreach (var article in Model.SavedArticles)
                        {
                            <div class="me-2">
                                <button class="btn btn-outline-danger">
                                    @article.Topic
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
