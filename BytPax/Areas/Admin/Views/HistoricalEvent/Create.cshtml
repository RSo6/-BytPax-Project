@model BytPax.Areas.Admin.Models.HistoricalEventCreateViewModel

@{
    ViewData["Title"] = "Створення історичної події";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Назва події</label>
            <input asp-for="Title" class="form-control"  name="Title"/>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Опис</label>
            <textarea asp-for="Description" class="form-control" rows="5" name="Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="EventDate" class="form-label">Дата події</label>
            <input asp-for="EventDate" type="date" class="form-control" name="EventData" />
            <span asp-validation-for="EventDate" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Категорія</label>
            <select asp-for="CategoryId" class="form-select" name="CategoryId">
                @if (ViewBag.Categories is List<BytPax.Models.Category> categories && categories.Any())
                {
                    @foreach (var category in categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
                else
                {
                    <option value="">Немає доступних категорій</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImportanceLevel" class="form-label">Рівень важливості</label>
            <input asp-for="ImportanceLevel" type="number" class="form-control" name="ImportanceLevel" />
            <span asp-validation-for="ImportanceLevel" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ImageFile" class="form-label">Зображення</label>
            <input asp-for="ImageFile" type="file" class="form-control" name="ImageFile" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Зберегти</button>
    </form>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["SuccessMessage"]
        </div>
    }
</div>
