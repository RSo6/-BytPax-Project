@model BytPax.Areas.Admin.Models.AthleteCreateViewModel

@{
    ViewData["Title"] = "Створення спортсмена";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <form id="createAthleteForm" asp-area="Admin" asp-controller="Athlete" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="FullName" class="form-label">ПІБ</label>
            <input asp-for="FullName" class="form-control" name="FullName" />
            <span asp-validation-for="FullName" class="text-danger"></span>
            <!-- Виведення помилок під полем FullName -->
            @if (ViewData.ModelState["FullName"]?.Errors.Any() == true)
            {
                <div class="text-danger">
                    @foreach (var error in ViewData.ModelState["FullName"].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>

        <div class="mb-3">
            <label asp-for="Country" class="form-label">Країна</label>
            <input asp-for="Country" class="form-control" name="Country" />
            <span asp-validation-for="Country" class="text-danger"></span>
            <!-- Виведення помилок під полем Country -->
            @if (ViewData.ModelState["Country"]?.Errors.Any() == true)
            {
                <div class="text-danger">
                    @foreach (var error in ViewData.ModelState["Country"].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>

        <div class="mb-3">
            <label asp-for="City" class="form-label">Місто</label>
            <input asp-for="City" class="form-control" name="City" />
            <span asp-validation-for="City" class="text-danger"></span>
            <!-- Виведення помилок під полем City -->
            @if (ViewData.ModelState["City"]?.Errors.Any() == true)
            {
                <div class="text-danger">
                    @foreach (var error in ViewData.ModelState["City"].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>

        <div class="mb-3">
            <label asp-for="Age" class="form-label">Вік</label>
            <input asp-for="Age" class="form-control" name="Age" type="number" min="0" />
            <span asp-validation-for="Age" class="text-danger"></span>
            <!-- Виведення помилок під полем Age -->
            @if (ViewData.ModelState["Age"]?.Errors.Any() == true)
            {
                <div class="text-danger">
                    @foreach (var error in ViewData.ModelState["Age"].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Опис</label>
            <textarea asp-for="Description" class="form-control" name="Description" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
            <!-- Виведення помилок під полем Description -->
            @if (ViewData.ModelState["Description"]?.Errors.Any() == true)
            {
                <div class="text-danger">
                    @foreach (var error in ViewData.ModelState["Description"].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>

        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">Категорія</label>
            <select asp-for="CategoryId" class="form-select" name="CategoryId">
                <option value="0">Виберіть категорію</option>
                @if (ViewBag.Categories is List<BytPax.Models.Category> categories && categories.Any())
                {
                    @foreach (var category in categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
                else
                {
                    <option value="">Немає доступних категорій</option>
                }
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
            <!-- Виведення помилок під полем CategoryId -->
            @if (ViewData.ModelState["CategoryId"]?.Errors.Any() == true)
            {
                <div class="text-danger">
                    @foreach (var error in ViewData.ModelState["CategoryId"].Errors)
                    {
                        <p>@error.ErrorMessage</p>
                    }
                </div>
            }
        </div>

        <button type="submit" class="btn btn-primary">Зберегти</button>
        <a asp-area="Admin" asp-controller="Athlete" href="/Admin/Athlete" asp-action="Index" class="btn btn-secondary ms-2">Скасувати</a>
    </form>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">
            @TempData["SuccessMessage"]
        </div>
    }
</div>
