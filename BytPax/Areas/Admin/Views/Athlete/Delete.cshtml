@model BytPax.Areas.Admin.Models.AthleteCreateViewModel

@{
    ViewData["Title"] = "Видалити спортсмена";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h4>Ви впевнені, що хочете видалити цього спортсмена?</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-2">ПІБ</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Країна</dt>
        <dd class="col-sm-10">@Model.Country</dd>

        <dt class="col-sm-2">Місто</dt>
        <dd class="col-sm-10">@Model.City</dd>

        <dt class="col-sm-2">Вік</dt>
        <dd class="col-sm-10">@Model.Age</dd>

        <dt class="col-sm-2">Опис</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Так, видалити</button>
        <a asp-action="Index" href="/Admin/Athlete" class="btn btn-secondary ms-2">Скасувати</a>
    </form>
</div>