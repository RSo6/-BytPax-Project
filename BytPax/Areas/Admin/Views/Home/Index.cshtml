@{
    ViewData["Title"] = "Адмін панель";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="mb-4 text-center">Ласкаво просимо в адмін панель</h1>

    <div class="row g-4 justify-content-center">
        <!-- Користувачі -->
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card text-white bg-primary shadow h-100 animate__animated animate__fadeInUp">
                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                    <i class="fas fa-users fa-2x mb-2"></i>
                    <h5 class="card-title">@ViewBag.UsersCount</h5>
                    <p class="card-text">Користувачів</p>
                </div>
            </div>
        </div>

        <!-- Адміністратори -->
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card text-white bg-success shadow h-100 animate__animated animate__fadeInUp">
                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                    <i class="fas fa-user-shield fa-2x mb-2"></i>
                    <h5 class="card-title">@ViewBag.AdminCount</h5>
                    <p class="card-text">Адміністраторів</p>
                </div>
            </div>
        </div>

        <!-- Статті -->
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card text-white bg-warning shadow h-100 animate__animated animate__fadeInUp">
                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                    <i class="fas fa-newspaper fa-2x mb-2"></i>
                    <h5 class="card-title">@ViewBag.ArticlesCount</h5>
                    <p class="card-text">Статей</p>
                </div>
            </div>
        </div>

        <!-- Рекорди -->
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card text-white bg-danger shadow h-100 animate__animated animate__fadeInUp">
                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                    <i class="fas fa-trophy fa-2x mb-2"></i>
                    <h5 class="card-title">@ViewBag.RecordHistoriesCount</h5>
                    <p class="card-text">Рекордів</p>
                </div>
            </div>
        </div>

        <!-- Історичні події -->
        <div class="col-sm-6 col-md-4 col-lg-3">
            <div class="card text-white bg-info shadow h-100 animate__animated animate__fadeInUp">
                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                    <i class="fas fa-landmark fa-2x mb-2"></i>
                    <h5 class="card-title">@ViewBag.HistoricalEventsCount</h5>
                    <p class="card-text">Історичних подій</p>
                </div>
            </div>
        </div>
    </div>
</div>
