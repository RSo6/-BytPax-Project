@model BytPax.Models.Athlete

<h2>Редагувати атлета</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id)

    <div class="form-group">
        <label>Ім’я</label>
        @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Країна</label>
        @Html.TextBoxFor(m => m.Country, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Місто</label>
        @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Категорія</label>
        <select class="form-control" name="categoryId">
            @foreach (var category in ViewBag.Categories as List<BytPax.Models.Category>)
            {
                var selected = category.Id == Model.CategoryId ? "selected" : "";
                <option value="@category.Id" selected="@selected">@category.TypeOfSport</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Вік</label>
        @Html.TextBoxFor(m => m.Age, new { @class = "form-control", type = "number", min = 1 })
    </div>

    <div class="form-group">
        <label>Опис</label>
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 3 })
    </div>

    <button type="submit" class="btn btn-primary mt-2">Оновити</button>
}