<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Admin Panel</title>

    <!-- Головний CSS із твого шаблону -->
    <link href="~/admin/css/styles.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    

    @RenderSection("Styles", required: false)
</head>
<body class="sb-nav-fixed">
<!-- Навігація згори -->
<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
    <a class="navbar-brand ps-3" href="/Admin/Home/Index">Admin Panel</a>
</nav>

<div id="layoutSidenav">
    <!-- Бокове меню -->
    <div id="layoutSidenav_nav">
        <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
            <div class="sb-sidenav-menu">
                <div class="nav">
                    <a class="nav-link" href="/Admin/Articles/Index">
                        <div class="sb-nav-link-icon"><i class="fas fa-newspaper"></i></div>
                        Articles
                    </a>
                    <a class="nav-link" href="/Admin/Athletes/Index">
                        <div class="sb-nav-link-icon"><i class="fas fa-running"></i></div>
                        Athletes
                    </a>
                </div>
            </div>
            
            <!-- Нижній блок меню -->
            @* <div class="sb-sidenav-footer"> *@
                <a class="btn btn-primary" href="/">
                    <div class="sb-nav-link-icon"> <i class="fas fa-door-open"></i></div>
                    Back to main page.
                </a>
            @* </div> *@
        </nav>
    </div>

    <!-- Основний контент -->
    <div id="layoutSidenav_content">
        <main class="container-fluid px-4 mt-4">
            <h1 class="mt-4">@ViewBag.Title</h1>
            <hr />
            @RenderBody()
        </main>

        <!-- Footer -->
        <footer class="py-4 bg-light mt-auto">
            <div class="container-fluid text-center">
                <div class="text-muted">© 2025 BytPax edition</div>
            </div>
        </footer>
    </div>
</div>

<!-- JS скрипти із твого шаблону -->
<script src="~/admin/js/bootstrap.bundle.min.js"></script>
<script src="~/admin/js/scripts.js"></script>
@RenderSection("Scripts", required: false)
</body>
</html>
