<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Admin Panel</title>

    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <!-- Custom Styles -->
    <link href="~/admin/css/styles.css" rel="stylesheet" />

    <style>
        /* Темна тема для бекграунду і тексту */
        body.sb-nav-fixed {
            background-color: #121212;
            color: #e0e0e0;
        }

        /* Навбар */
        .sb-topnav {
            background-color: #1f1f1f;
            box-shadow: 0 2px 4px rgb(0 0 0 / 0.5);
        }

            .sb-topnav .navbar-brand,
            .sb-topnav .btn-link.text-white {
                color: #f8f9fa;
            }

                .sb-topnav .btn-link.text-white:hover {
                    color: #0d6efd;
                    text-decoration: underline;
                }

        /* Бокове меню */
        .sb-sidenav-dark {
            background-color: #1a1a1a;
            color: #ccc;
        }

            .sb-sidenav-dark .nav-link {
                color: #ccc;
                transition: background-color 0.2s ease-in-out, color 0.2s ease-in-out;
            }

                .sb-sidenav-dark .nav-link:hover,
                .sb-sidenav-dark .nav-link.active {
                    background-color: #0d6efd;
                    color: #fff;
                }

            .sb-sidenav-dark .sb-nav-link-icon {
                color: #0d6efd;
            }

        /* Footer */
        footer.bg-light {
            background-color: #1f1f1f !important;
            color: #999 !important;
        }

        /* Кнопка повернення на головну сторінку */
        #layoutSidenav_nav a.btn-primary {
            margin: 1rem;
            background-color: #0d6efd;
            border-color: #0d6efd;
            font-weight: 500;
            box-shadow: 0 2px 6px rgb(13 110 253 / 0.6);
        }

            #layoutSidenav_nav a.btn-primary:hover {
                background-color: #0b5ed7;
                border-color: #0a58ca;
            }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body class="sb-nav-fixed">

    <nav class="sb-topnav navbar navbar-expand navbar-dark">
        <a class="navbar-brand ps-3" href="/Admin/Home/Index">Admin Panel</a>
        <ul class="navbar-nav ms-auto">
            <li class="nav-item">
                <form action="/Auth/Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-link text-white">
                        <i class="fas fa-sign-out-alt"></i> Вийти
                    </button>
                </form>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <!-- Бокове меню -->
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        <a class="nav-link" href="/Admin/Article/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-newspaper"></i></div>
                            Статті
                        </a>
                        <a class="nav-link" href="/Admin/Athlete/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-running"></i></div>
                            Спортсмени
                        </a>
                        <a class="nav-link" href="/Admin/HistoricalEvent/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-history"></i></div>
                            Історичні події
                        </a>
                        <a class="nav-link" href="/Admin/RecordHistory/Index">
                            <div class="sb-nav-link-icon"><i class="fas fa-trophy"></i></div>
                            Історія рекордів
                        </a>
                    </div>
                </div>
                <a class="btn btn-primary" href="/">
                    <div class="sb-nav-link-icon"><i class="fas fa-door-open"></i></div>
                    Повернутися на головну
                </a>
            </nav>
        </div>

        <!-- Основний контент -->
        <div id="layoutSidenav_content">
            <main class="container-fluid px-4 mt-4">

                <!-- Повідомлення -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show animate__animated animate__fadeInDown" role="alert">
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрити"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show animate__animated animate__fadeInDown" role="alert">
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Закрити"></button>
                    </div>
                }

                <h1 class="mt-4">@ViewBag.Title</h1>
                <hr />
                @RenderBody()
            </main>

            <footer class="py-4 bg-light mt-auto text-center">
                <div class="container-fluid">
                    <div class="text-muted">© 2025 BytPax edition</div>
                </div>
            </footer>
        </div>
    </div>

    <!-- Скрипти Bootstrap та jQuery -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/admin/js/scripts.js"></script>

    <script>
        setTimeout(function () {
            const alert = document.querySelector('.alert');
            if (alert) {
                bootstrap.Alert.getOrCreateInstance(alert).close();
            }
        }, 4000);
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
