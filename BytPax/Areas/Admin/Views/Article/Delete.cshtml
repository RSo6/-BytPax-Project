@model BytPax.Areas.Admin.Models.ArticleCreateViewModel

@{
    ViewData["Title"] = "Видалити статтю";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card bg-dark text-light shadow-lg animate__animated animate__fadeIn">
    <div class="card-header border-bottom border-secondary">
        <h4 class="mb-0 text-danger"><i class="fas fa-trash-alt me-2"></i>Видалити статтю</h4>
    </div>
    <div class="card-body">
        <p class="mb-4 fs-5">Ви впевнені, що хочете видалити цю статтю?</p>

        <dl class="row">
            <dt class="col-sm-3 text-light">Тема:</dt>
            <dd class="col-sm-9">@Model.Topic</dd>

            <dt class="col-sm-3 text-light">Опис:</dt>
            <dd class="col-sm-9">@Model.BodyText</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-4">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-danger shadow-sm">
                    <i class="fas fa-check me-1"></i> Так, видалити
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                    <i class="fas fa-times me-1"></i> Скасувати
                </a>
            </div>
        </form>
    </div>
</div>
